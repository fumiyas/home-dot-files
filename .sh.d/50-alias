alias c='printf "\017\033c"; stty sane; reset'
tsize() {
  local cols lines

  if [[ $# -eq 0 ]]; then
    cols=100
    lines=64
  else
    if [[ -n ${1#-} ]]; then
      cols="$1"
    else
	cols=$(tput cols)
    fi
    if [[ -n ${2#-} ]]; then
      lines="$2"
    else
	lines=$(tput lines)
    fi
  fi

  printf '\e[8;%d;%dt' "$lines" "$cols"
}
ttitle()
{
  printf "\e]2;%s\a" "$*"
}

a2image() {
  if [ -z "$1" ]; then
    echo "Usage: a2image FILENAME.EXT"
    return
  fi
  convert label:@- "$1"
}

base64url() {
  base64 "$@" |sed 's/+/-/g;s/\//_/g'
}
base64url-decode() {
  sed 's/-/+/g;s/_/\//g' |base64 --decode "$@"
}

