git-diff-reflog() {
  git diff "@{${1-1}}"
}

git-patch() {
  if [ $# -eq 0 ]; then
    git format-patch --stdout "HEAD~"
  elif [ $# -eq 1 ]; then
    git format-patch --stdout "$1~..$1"
  else
    git format-patch --stdout "$1..$2"
  fi
}

git-patch-mail() {
  if [ $# -eq 0 ]; then
    git format-patch --attach --stdout "HEAD~"
  elif [ $# -eq 1 ]; then
    git format-patch --attach --stdout "$1~..$1"
  else
    git format-patch --attach --stdout "$1..$2"
  fi
}

