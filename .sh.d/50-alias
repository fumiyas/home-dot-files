#!/bin/bash
## Aliases and functions definition for bash, zsh
## Author: SATOH Fumiyasu

alias2() {
  local alias="$1"; shift
  if [[ -n ${1+set} ]]; then
    cmd="$1"; shift
  else
    cmd=$(</dev/stdin)
  fi

  # shellcheck disable=SC2139 # This expands when defined, not when used
  alias "$alias"="$cmd"
}

